<config>
    <sections>
        <google>
            <groups>
                <universal translate="label comment" module="cls_universalanalytics">
                    <label>Universal Analytics Options</label>
                    <comment><![CDATA[These options require Universal Analytics to be enabled in the above group.]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <order_count_index>
                            <label>Order Count dimension index</label>
                            <frontend_type>text</frontend_type>
                            <config_path>google/analytics/order_count_index</config_path>
                            <sort_order>510</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order_count_index>
                        <customer_group_index>
                            <label>Customer Group dimension index</label>
                            <frontend_type>text</frontend_type>
                            <config_path>google/analytics/customer_group_index</config_path>
                            <sort_order>520</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </customer_group_index>
                        <page_type_index>
                            <label>Page type dimension index</label>
                            <frontend_type>text</frontend_type>
                            <config_path>google/analytics/page_type_index</config_path>
                            <sort_order>530</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </page_type_index>
                        <custom_product_attribute>
                            <label>Product Attribute</label>
                            <frontend_type>select</frontend_type>
                            <config_path>google/analytics/custom_product_attribute</config_path>
                            <source_model>cls_universalanalytics/system_config_source_product_attribute</source_model>
                            <sort_order>540</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_product_attribute>
                        <custom_product_attribute_index>
                            <label>Product Attribute dimension index</label>
                            <frontend_type>text</frontend_type>
                            <config_path>google/analytics/custom_product_attribute_index</config_path>
                            <sort_order>550</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_product_attribute_index>
                    </fields>
                </universal>
                <adwords translate="label" module="cls_universalanalytics">
                    <label>Google Adwords</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <conversion_enabled translate="label">
                            <label>Conversion Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_enabled>
                        <conversion_id translate="label">
                            <label>Conversion ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_id>
                        <conversion_label translate="label">
                            <label>Conversion Label</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_label>
                        <conversion_language translate="label">
                            <label>Conversion Language</label>
                            <frontend_type>select</frontend_type>
                            <source_model>cls_universalanalytics/system_config_source_language</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </conversion_language>
                        <currency_convert_enabled translate="label">
                            <label>Currency Convert Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </currency_convert_enabled>
                        <new_currency translate="label">
                            <label>New Currency</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_currency</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </new_currency>
                    </fields>
                </adwords>
            </groups>
        </google>
    </sections>
</config>
