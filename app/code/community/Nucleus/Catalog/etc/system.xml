<config>
    <sections>
        <catalog>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <badges translate="label">
                    <label>Badges</label>
                    <sort_order>1200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_badge_new translate="label">
                            <label>Enable "New" Badge</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>nucleus_catalog/system_config_backend_badge_catalog</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_badge_new>
                        <enable_badge_sale translate="label">
                            <label>Enable "Sale" Badge</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>nucleus_catalog/system_config_backend_badge_catalog</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_badge_sale>
                        <enable_badge_attribute_based translate="label">
                            <label>Enable Badges Based on "Badges" Attribute</label>
                            <frontend_type>select</frontend_type>
                            <backend_model>nucleus_catalog/system_config_backend_badge_catalog</backend_model>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_badge_attribute_based>
                    </fields>
                </badges>
            </groups>
        </catalog>
    </sections>
</config>