<config>
    <modules>
        <Nucleus_Support>
            <version>1.0.2</version>
        </Nucleus_Support>
    </modules>

    <global>
        <helpers>
            <nucleus_support>
                <class>Nucleus_Support_Helper</class>
            </nucleus_support>
        </helpers>
        <blocks>
            <nucleus_support>
                <class>Nucleus_Support_Block</class>
            </nucleus_support>
        </blocks>
        <template>
            <email>
                <nucleus_support_email_email_template translate="label">
                    <label>Nucleus Support</label>
                    <file>nucleus/support/request.html</file>
                    <type>html</type>
                </nucleus_support_email_email_template>
            </email>
        </template>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Nucleus_Support>
                    <files>
                        <default>Nucleus_Support.csv</default>
                    </files>
                </Nucleus_Support>
            </modules>
        </translate>       
        <layout>
            <updates>
                <nucleus_support>
                    <file>nucleus_support.xml</file>
                </nucleus_support>
            </updates>
        </layout>    
    </adminhtml>

    <frontend>
        <translate>
            <modules>
                <Nucleus_Support>
                    <files>
                        <default>Nucleus_Support.csv</default>
                    </files>
                </Nucleus_Support>
            </modules>
        </translate>
    </frontend>
    
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <nucleus_support before="Mage_Adminhtml">Nucleus_Support_Adminhtml</nucleus_support>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    
    <default>
        <nucleus_support>
            <email>
                <recipient_email>support@nucleussupport.com</recipient_email>
            </email>            
        </nucleus_support>
    </default>
        
    
    
</config>
