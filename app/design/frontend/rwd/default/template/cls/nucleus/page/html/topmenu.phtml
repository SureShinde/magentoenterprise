/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */
?>
<?php $_menu = $this->getHtml('level-top') ?>

<?php if($_menu): ?>
    <nav id="nav">
        <ol class="nav-primary mega-menu-primary">
            <?php echo $_menu ?>
        </ol>
    </nav>
    <script type="text/javascript">
        // Register appropriate CSS class for when second-level headings should function as linked sub-headings instead of triggers
        $j(document).ready(function() {
            enquire.register('(min-width: ' + (bp.medium+1) + 'px)', {
                match: function () {
                    $j('#nav a.has-children:not(.level0)').addClass('mega-menu-subhead');
                },
                unmatch: function () {
                    $j('#nav a.has-children:not(.level0)').removeClass('mega-menu-subhead');
                }
            });
        });
    </script>
<?php endif ?>