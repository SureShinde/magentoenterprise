<?php
/**
 * Sub-category list template
 *
 * @see CLS_NucleusCore_Block_Catalog_Category_List
 */
?>
<?php
$_categoryCollection = $this->getCategoryCollection();
$_helper = $this->helper('catalog/output');
?>
<?php if($_categoryCollection->count() > 0): ?>
    <div class="category-subcategories">
        <?php
        $_collectionSize = $_categoryCollection->count();
        $_columnCount = $this->getColumnCount();
        ?>
        <ul class="subcategories-grid subcategories-grid--max-<?php echo $_columnCount; ?>-col">
            <?php
            foreach ($_categoryCollection as $_category):
                $_categoryThumbUrl = Mage::helper('cls_nucleuscore')->resizeCategoryThumbnail($_category, 'list_thumbnail', 270);
                ?>
                <li class="item">
                    <a href="<?php echo $_category->getUrl() ?>" title="<?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?>" class="subcat-image">
                        <?php if (!empty($_categoryThumbUrl)): ?>
                            <img src="<?php echo $_categoryThumbUrl ?>" alt="<?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?>" />
                        <?php endif; ?>
                        <span class="subcat-name"><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></span>
                    </a>
                </li>
            <?php endforeach ?>
        </ul>
    </div>
<?php endif; ?>